
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>

<style>
     .table{
          width:80%;
     }
</style>

@foreach (var item in ViewBag.Article)
{
     <hr />
     <div class="container">
          <div class="row">
               <div class="col-sm">
                    <center style="margin-bottom:10px;">
                         <img src="@item.PicturePath" class="img-thumbnail" width="100%" alt="" style="border-radius:30px;" />
                    </center>
                    @Html.Raw(@item.Title)
               </div>
          </div>

          <div class="row">
               <div class="col-sm">
                    @Html.Raw(@item.FullContent)
               </div>
          </div>

     </div>

<div class="container" style="width:90%; margin-bottom:20px; border:solid grey 3px; overflow:hidden; border-radius:10px;">
<div>
     <div class="col-lg-12">
          <h2 class="text-left">
               Comments:
          </h2>
     </div>
     <div class="col-lg-10" style="margin:0 auto;">
          <div id="comment-field"></div>
     </div>
     <div class="col-lg-10" style="margin:0 auto;">
          <form>
               <div class="form-group">
                    <input type="text" class="form-control" id="comment-name" value="@User.Identity.Name" style="display:none;">
               </div>
               <div class="form-group">
                    <input type="text" class="form-control" id="article-id" value="@item.Id" style="display:none;">
               </div>
               <div class="form-group">
                    <input type="text" class="form-control" id="comment-name" value="@User.Identity.Name" style="display:none;">
               </div>
               <div class="form-group">
                    <label for="comment-body"></label>
                    <textarea type="password" class="form-control" id="comment-body" placeholder="Leave your comment"></textarea>
               </div>
               <div class="form-group text-right">
                    <button type="reset" id="comment-add" class="btn btn-primary" style="width:15%">Publish</button>
               </div>
          </form>
     </div>
</div>
</div>
}





<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
